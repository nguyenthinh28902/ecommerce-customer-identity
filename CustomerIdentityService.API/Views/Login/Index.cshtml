@{
    Layout = null;
}
@using CustomerIdentityService.Core.Models.ViewModel
@model LoginViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            width: 900px;
            height: 500px;
            display: flex;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        /* Phần Banner bên trái */
        .banner-side {
            flex: 1.2;
            background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%); /* Màu cam hồng */
            /* Nếu bạn muốn dùng ảnh nền đã tách, hãy dùng dòng dưới đây: */
            /* background: url('background.jpg') no-repeat center center/cover; */
            position: relative;
            padding: 60px;
            color: white;
            display: flex;
            align-items: center;
            overflow: hidden;
        }

            .banner-side .content {
                position: relative;
                z-index: 2;
            }

            .banner-side h1 {
                font-size: 2.5rem;
                margin-bottom: 20px;
            }

            .banner-side p {
                font-size: 0.9rem;
                line-height: 1.6;
                opacity: 0.9;
            }

        /* Phần Form bên phải */
        .form-side {
            flex: 1;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

            .form-side h2 {
                color: #764ba2;
                margin-bottom: 30px;
                font-size: 1.2rem;
                letter-spacing: 1px;
            }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

            .input-group i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #764ba2;
            }

            .input-group input {
                width: 100%;
                padding: 12px 15px 12px 40px;
                border: none;
                background: #f0f0ff;
                border-radius: 25px;
                outline: none;
            }

        .options {
            display: flex;
            justify-content: space-between;
            font-size: 0.75rem;
            color: #999;
            margin-bottom: 30px;
        }

            .options a {
                text-decoration: none;
                color: #999;
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 25px;
            background: linear-gradient(to right, #f093fb, #764ba2);
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-login:hover {
                opacity: 0.9;
                transform: translateY(-2px);
            }
        /* --- RESPONSIVE QUERIES --- */

        /* Máy tính bảng (Tablet) - Màn hình dưới 992px */
        @@media screen and (max-width: 992px) {
            .login-container {
                width: 90%; /* Thu hẹp chiều ngang */
                height: auto; /* Cho phép chiều cao tự tăng theo nội dung */
            }

            .banner-side {
                padding: 40px;
            }
        }

        /* Điện thoại di động (Mobile) - Màn hình dưới 768px */
        @@media screen and (max-width: 768px) {
            .login-container {
                flex-direction: column; /* Chuyển từ hàng ngang thành hàng dọc */
                width: 95%;
                margin: 20px;
            }

            .banner-side {
                padding: 30px;
                text-align: center;
                min-height: 200px; /* Đảm bảo banner vẫn hiện rõ */
            }

                .banner-side h1 {
                    font-size: 1.8rem;
                }

            .form-side {
                padding: 40px 20px;
            }
        }

        /* Điện thoại nhỏ - Màn hình dưới 480px */
        @@media screen and (max-width: 480px) {
            .options {
                flex-direction: column; /* Cho 'Remember' và 'Forgot' nằm trên dưới */
                gap: 10px;
                align-items: center;
            }
        }
        /*button google*/
        .btn-google {
            width: 100%;
            padding: 12px;
            border: 1px solid #dadce0;
            border-radius: 25px;
            background: white;
            color: #3c4043;
            font-weight: 500;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 15px;
        }

            .btn-google img {
                width: 20px;
            }

            .btn-google:hover {
                background-color: #f8f9fa;
                border-color: #d2e3fc;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="banner-side">
            <div class="content">
                <h1>Welcome to website</h1>
                <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
            </div>
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
        </div>

        <div class="form-side">
            <h2>USER LOGIN</h2>
            @{
                foreach (var providerName in Model.AllowedProviders)
                {
                    switch (providerName)
                    {
                        case "Google":
                            @using (Html.BeginForm("GoogleChallenge", "Auth", FormMethod.Get, new { @class = "login-form-item" }))
                            {
                                @Html.HiddenFor(m => m.ReturnUrl)
                                <button type="submit" name="provider" value="Google" class="btn-google">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
                                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12s5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" />
                                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" />
                                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571l6.19,5.238C40.483,35.54,44,30.39,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
                                    </svg>
                                    Login with @providerName
                                </button>
                            }
                            break;
                    }
                }
            }
        </div>
    </div>
</body>
</html>